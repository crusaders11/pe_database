          Ioi revenue multiple
        </label>

        <input type="text" id="ioi_revenue_multiple" name="ioi_revenue_multiple" placeholder="Ioi revenue multiple" class="form-control" value="<%= @deal.ioi_revenue_multiple %>">
      </div>

      <!-- Label and input for ioi_ebitda_multiple -->
      <div class="form-group">
        <label for="ioi_ebitda_multiple" class="control-label">
          Ioi ebitda multiple
        </label>

        <input type="text" id="ioi_ebitda_multiple" name="ioi_ebitda_multiple" placeholder="Ioi ebitda multiple" class="form-control" value="<%= @deal.ioi_ebitda_multiple %>">
      </div>

