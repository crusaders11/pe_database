<!-- Validation failure messages -->
<% if @deal.errors.any? %>
  <% @deal.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Deal #<%= @deal.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_deal/<%= @deal.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for deal_name -->
      <div class="form-group">
        <label for="deal_name" class="control-label">
          Deal name
        </label>

        <input type="text" id="deal_name" name="deal_name" placeholder="Deal name" class="form-control" value="<%= @deal.deal_name %>">
      </div>

      <!-- Label and input for industry_id -->
      <div class="form-group">
        <label for="industry_id" class="control-label">
